<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/video_c9"
        android:padding="50dp"
        android:text="视频详情页面"
        android:visibility="gone" />

    <TextView
        android:id="@+id/set_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/video_c9"
        android:padding="30dp"
        android:text="获取token值"
        android:visibility="gone"></TextView>

    <EditText
        android:id="@+id/panelid"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:hint="panelid"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:visibility="gone">

    </EditText>

    <EditText
        android:id="@+id/contentid"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:hint="contentid"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:visibility="gone">

    </EditText>

    <TextView
        android:id="@+id/fxsys"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@color/video_c9"
        android:gravity="center"
        android:text="分享四要素"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:visibility="gone">

    </TextView>

    <TextView
        android:id="@+id/class_list"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@color/video_c9"
        android:gravity="center"
        android:text="合集列表"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:visibility="gone">

    </TextView>

    <TextView
        android:id="@+id/login_activity"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@color/video_c9"
        android:gravity="center"
        android:text="登录页面"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:visibility="gone">

    </TextView>

    <TextView
        android:id="@+id/others_home_page"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@color/video_c9"
        android:gravity="center"
        android:text="带UI界面的SDK首页"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff">

    </TextView>

    <TextView
        android:id="@+id/clear_login_info"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@color/video_c9"
        android:gravity="center"
        android:text="清空用户信息"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff">

    </TextView>

    <TextView
        android:id="@+id/getListData"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@color/video_c9"
        android:gravity="center"
        android:text="获取推荐列表数据"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"></TextView>

    <TextView
        android:id="@+id/getLoadMoreListData"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@color/video_c9"
        android:gravity="center"
        android:text="获取推荐列表更多数据"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"></TextView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></androidx.recyclerview.widget.RecyclerView>
</LinearLayout>